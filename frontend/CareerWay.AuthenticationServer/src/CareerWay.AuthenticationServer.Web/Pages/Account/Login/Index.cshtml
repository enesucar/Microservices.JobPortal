<style>
.no-hover:hover {
    background-color: #0d6efd !important; /* Bootstrap 5 primary rengi */
    color: white !important;
}
</style>

<section class="middle">
    <div class="container">
        <div class="row align-items-start justify-content-between">
            <h2 class="mb-3">Giriş Yap</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-xl-12 col-lg-6 col-md-12 col-sm-12">
                <form class="border p-3 rounded" asp-page="/Account/Login/Index">
                    <input type="hidden" asp-for="Input.ReturnUrl" />
                    <div class="form-group">
                        <label asp-for="Input.Email">Email Adresi</label>
                        <input type="email" class="form-control" asp-for="Input.Email">
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password">Şifre</label>
                        <input type="password" class="form-control" asp-for="Input.Password">
                    </div>

                    <div class="form-group">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="flex-1">
                                <input id="dd" class="checkbox-custom" name="dd" type="checkbox">
                                <label for="dd" class="checkbox-custom-label">Remember Me</label>
                            </div>
                            @* 	<div class="eltio_k2">
								<a href="#">Lost Your Password?</a>
							</div> *@
                        </div>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-md full-width theme-bg text-light fs-md ft-medium" value="login">Login</button>
                    </div>
                    <div class="form-group">
                        @if (Model.Input.ClientId == "company")
                        {
                            <a asp-page="/Company/Register/Index" class="btn btn-primary w-100 no-hover" asp-route-returnUrl="@Model.Input.ReturnUrl">Şirket Kaydı!!!</a>
                        }
                        else if (Model.Input.ClientId == "jobseeker")
                        {
                            <a asp-page="/JobSeeker/Register/Index" class="btn btn-primary w-100 no-hover" asp-route-returnUrl="@Model.Input.ReturnUrl">İş Arayan Kaydı!!!</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>