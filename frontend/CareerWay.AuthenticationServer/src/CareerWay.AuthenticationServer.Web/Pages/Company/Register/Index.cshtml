@page
@model CareerWay.AuthenticationServer.Web.Pages.Company.Register.IndexModel
@{
}

<section class="middle">
    <div class="container">
        <div class="row align-items-start justify-content-between">
            <h2 class="mb-3">Şirket Kaydı</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-xl-12 col-lg-6 col-md-12 col-sm-12">
                <form class="border p-3 rounded" asp-page="/Company/Register/Index">
                    <input type="hidden" asp-for="Input.ReturnUrl" />

                    <div class="form-group">
                        <label asp-for="Input.Title"></label>
                        <input class="form-control" type="text" placeholder="Username" asp-for="Input.Title" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.FirstName"></label>
                        <input class="form-control" type="text" placeholder="FirstName" asp-for="Input.FirstName" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName"></label>
                        <input class="form-control" type="text" placeholder="LastName" asp-for="Input.LastName" autofocus>
                    </div>  <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input class="form-control" type="email" placeholder="Email" asp-for="Input.Email" autofocus>
                    </div>  <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input class="form-control" type="password" placeholder="Password" asp-for="Input.Password" autofocus>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-md full-width theme-bg text-light fs-md ft-medium" value="login">Kayıt Ol</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>   