@page
@model CareerWay.AuthenticationServer.Web.Pages.JobSeeker.RegisterModel
@{
}

<section class="middle">
	<div class="container">
		<div class="row align-items-start justify-content-between">
			<h2 class="mb-3">İş Arayan Kaydı</h2>
			<div class="col-xl-12 col-lg-6 col-md-12 col-sm-12">
				<form class="border p-3 rounded" asp-page="/JobSeeker/Register/Index">
					<input type="hidden" asp-for="Input.ReturnUrl" />
					
					<div class="row form-group">
						<div class="col-6">
							<label asp-for="Input.FirstName">İsim</label>
							<input type="text" class="form-control" asp-for="Input.FirstName" />
						</div>
						<div class="col-6">
							<label asp-for="Input.LastName">Soyisim</label>
							<input type="text" class="form-control" asp-for="Input.LastName" />
						</div>
					</div>
					<div class="form-group">
						<label asp-for="Input.Email">Email Adresi</label>
						<input type="email" class="form-control" asp-for="Input.Email">
					</div>
					<div class="form-group">
						<label asp-for="Input.Password">Şifre</label>
						<input type="password" class="form-control" asp-for="Input.Password">
					</div>

					<div class="form-group">
						<div class="d-flex align-items-center justify-content-between"> 
							@* 	<div class="eltio_k2">
								<a href="#">Lost Your Password?</a>
							</div> *@
						</div>
					</div>

					<div class="form-group">
						<button class="btn btn-md full-width theme-bg text-light fs-md ft-medium" value="login">Kayıt Ol</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>